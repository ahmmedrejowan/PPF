<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:foregroundGravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <com.rejowan.ppf.PatternLockView
        android:id="@+id/pattern_lock_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        app:aspectRatio="match_width"
        app:correctStateColor="#4CAF50"
        app:dotAnimationDuration="150"
        app:dotNormalSize="20dp"
        app:dotSelectedSize="40dp"
        app:lineEndAnimationDuration="100"
        app:lineWidth="10dp"
        app:normalStateColor="#32b6ce"
        app:patternLength="3"
        app:wrongStateColor="#F44336" />


    <com.rejowan.ppf.IndicatorDots
        android:id="@+id/indicator_dots"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        app:dotDiameter="12dp"
        app:dotSpacing="16dp"
        app:indicatorLength="6" />


    <com.rejowan.ppf.PinLockView
        android:id="@+id/pin_lock_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        app:keypadDeleteButtonPressedColor="#FF5722"
        app:keypadDeleteButtonSize="20dp"
        app:keypadTextColor="@color/black"
        app:pinLength="6" />


</LinearLayout>