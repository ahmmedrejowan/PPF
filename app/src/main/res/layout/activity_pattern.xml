<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Pattern">



    <com.rejowan.ppf.PatternLockView
        android:id="@+id/pattern_lock_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        app:aspectRatio="match_width"
        app:dotAnimationDuration="150"
        app:dotNormalSize="20dp"
        app:dotSelectedSize="40dp"
        app:lineEndAnimationDuration="100"
        app:lineWidth="10dp"
        app:patternLength="3"
        app:stateCorrectColor="#4CAF50"
        app:stateNormalColor="#32b6ce"
        app:stateWrongColor="#F44336" />


</RelativeLayout>