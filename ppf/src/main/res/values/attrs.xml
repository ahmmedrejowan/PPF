<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="PatternLockView">
        <attr name="aspectRatio" format="enum">
            <enum name="square" value="0" />
            <enum name="match_width" value="1" />
            <enum name="match_height" value="2" />
        </attr>
        <attr name="dotAnimationDuration" format="integer" />
        <attr name="dotNormalSize" format="dimension" />
        <attr name="dotSelectedSize" format="dimension" />
        <attr name="lineEndAnimationDuration" format="integer" />
        <attr name="lineWidth" format="dimension" />
        <attr name="patternLength" format="integer" />
        <attr name="stateNormalColor" format="color" />
        <attr name="stateCorrectColor" format="color" />
        <attr name="stateWrongColor" format="color" />
    </declare-styleable>


    <declare-styleable name="PinLockView">
        <attr name="pinLength" format="integer" />
        <attr name="deleteButtonDrawable" format="integer" />
        <attr name="deleteButtonNormalColor" format="color" />
        <attr name="deleteButtonSize" format="dimension" />
        <attr name="deleteButtonPressedColor" format="color" />
        <attr name="keyTextColor" format="color" />
        <attr name="keyTextSize" format="dimension" />
        <attr name="keyButtonSize" format="dimension" />
        <attr name="keyVerticalSpacing" format="dimension" />
        <attr name="keyHorizontalSpacing" format="dimension" />
        <attr name="keyBackgroundDrawable" format="integer" />
        <attr name="showDeleteButton" format="boolean" />

    </declare-styleable>


    <declare-styleable name="IndicatorDots">
        <attr name="count" format="integer" />
        <attr name="dotDrawableNormal" format="reference" />
        <attr name="dotDrawableFilled" format="reference" />
        <attr name="dotColorNormal" format="color" />
        <attr name="dotColorFilled" format="color" />
        <attr name="diameter" format="dimension" />
        <attr name="padding" format="dimension" />
        <attr name="type" format="enum">
            <enum name="fixed" value="0" />
            <enum name="fill" value="1" />
            <enum name="fillWithAnimation" value="2" />
        </attr>

    </declare-styleable>


</resources>